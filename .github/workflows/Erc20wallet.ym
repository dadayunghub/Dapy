name: Erc20 wallet

on:
  workflow_dispatch:

jobs:
  generate_secret:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install circle-smart-contract-platform circle-developer-controlled-wallets

      - name: Erc20 contract
        env:
          CIRCLE_API_KEY: ${{ secrets.CIRCLE_API_KEY }}
          CIRCLE_ENTITY_SECRET: ${{ secrets.CIRCLE_ENTITY_SECRET }}
        run: |
          python erc20wallet.py \
            "$CIRCLE_API_KEY" \
            "$CIRCLE_ENTITY_SECRET" \
